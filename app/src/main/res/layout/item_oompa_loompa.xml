<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_16"
    android:background="@drawable/bg_shape_rounded_8px"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:padding="@dimen/dimen_16">

    <TextView
        android:id="@+id/txtName"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_8"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtId"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_8"
        android:layout_marginBottom="@dimen/dimen_8"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/txtName"
        app:layout_constraintEnd_toStartOf="@+id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtProfession"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_8"
        android:background="@drawable/bg_shape_rounded_48px"
        android:backgroundTint="@color/black_at_50"
        android:paddingHorizontal="@dimen/dimen_16"
        android:paddingVertical="@dimen/dimen_8"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/txtId"
        app:layout_constraintBottom_toTopOf="@id/txtId"
        tools:text="Kelsy paramor" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/dimen_avatar_size"
        android:layout_height="@dimen/dimen_avatar_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>